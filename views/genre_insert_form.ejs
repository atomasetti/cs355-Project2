<%  // include jquery for ajax requests and
    // include custom javascript file for submitting data to our web server using ajax
    // order matters.  genre_ajax requires jquery, so it must be loaded second
%>
<% var js_includes = ['https://code.jquery.com/jquery-1.12.3.min.js', '/javascripts/genre_ajax.js']%>

<% include partials/header %>



<h1 id="demo">Add New Genre</h1>
<form>
    Name: <input type="text" id="genre_name" />
    <button id="addBtn" onclick="loadDoc()">Add</button>
</form>
<div id="message" style="display:none">This Text is Hidden!</div>

<script>
    function loadDoc() {
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function() {
            if (xhttp.readyState == 4 && xhttp.status == 200) {
                document.getElementById("demo").innerHTML = xhttp.responseText;
            }
        };
        xhttp.open("GET", "Success.txt", true);
        xhttp.send();
    }
</script>

<% include partials/footer %>